           <record id="view_eos_emp_form_sit_one" model="ir.ui.view">
            <field name="name">eos.employee.view.form.sit</field>
            <field name="model">employee.eos</field>
            <field name="inherit_id" ref="saudi_hr_eos.eos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="is_payment" invisible="1" />
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="action_create_payment" type="object" class="oe_highlight" attrs="{'invisible' : [('is_payment','=',True)]}" string="Create Payment" groups="account.group_account_manager,basic_hr.group_hr_ceo"/>
                </xpath>
                <xpath expr="//sheet/group[1]" position="before">
                        <div class="oe_button_box" name="button_box">
            <button name="action_payment_view" type="object" class="oe_stat_button" icon="fa-tasks" attrs="{'invisible':[('is_payment', '=', False)]}" string="Payment"/>
                        </div>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="EOS Calculation Formula">
                        <h3 style="border: 1px #a24689 solid;border-radius: 5px;padding: 10px;">
                            <br/>
                            <strong>Calculation Formula for EOSB Amount:</strong><br/><br/>

                            <strong>First Condition for EOSB Amount:</strong><br/>

                            <strong>If Service Duration less than 5 years:</strong><br/>
	EOSB Amount == (No.of Years * Total Salary) / 2<br/><br/>

                            <strong>If Service Duration > 5 years:</strong><br/>
	Amount for first 5 years == (5 * Total Salary) / 2<br/>
	No.of years after 5 == No.of Years - 5<br/>
	Amount after 5 years == (No.of years after 5)*(Total Salary)<br/>
	Total EOSB Amount == Amount for first 5 years + Amount after 5 years<br/><br/>

                            <strong>Conditions for Resignation:</strong><br/>

                            <strong>If Service Duration less than 2 years:</strong><br/>
	EOS Amount == Nothing<br/><br/>

                            <strong>If Service Duration less than equal to 5 years:</strong><br/>
	EOS Amount == EOSB Amount(calculated above) / 3<br/><br/>

                            <strong>If Service Duration less than equal to 10 years:</strong><br/>
	EOS Amount == (EOSB Amount(calculated above) * 2) / 3<br/><br/>

                            <strong>If Service Duration greater than 10 years:</strong><br/>
	EOS Amount == EOSB Amount(calculated above)
                        </h3>
                    </page>
                </xpath>
            </field>
              </record>
