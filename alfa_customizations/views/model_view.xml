<odoo>
    <data>
        <record id="view_payment_inh_sit" model="ir.ui.view">
            <field name="name">payment.account.view.req</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_date']" position="after">
                    <field name="sale_order_id" string="SO Reference" attrs="{'invisible':[('partner_type','!=','customer')]}" options="{&quot;no_create&quot;:True}" />
                </xpath>
            </field>
        </record>

        <record id="view_manufacture_inh_sit" model="ir.ui.view">
            <field name="name">order.manufacture.view.req</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='post_inventory']" position="attributes">
                    <attribute name="groups">
                        alfa_customizations.group_validate_transfer_move
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='action_assign']" position="attributes">
                    <attribute name="groups">
                        alfa_customizations.group_can_confirm_mo
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='open_produce_product'][1]" position="attributes">
                    <attribute name="groups">
                        alfa_customizations.group_can_confirm_mo
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='open_produce_product'][2]" position="attributes">
                    <attribute name="groups">
                        alfa_customizations.group_can_confirm_mo
                    </attribute>
                </xpath>
                <xpath expr="//notebook/page[3]/group/group" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="picking_type_id" domain="[('code', '=', 'mrp_operation')]" attrs="{'readonly': [('has_moves', '=', True)]}"/>
                    <field name="location_src_id" domain="[('usage','=','internal')]" attrs="{'readonly': [('has_moves', '=', True)]}"/>
                    <field name="location_dest_id" domain="[('usage','=','internal')]" attrs="{'readonly': [('has_moves', '=', True)]}"/>
                </xpath>
                <xpath expr="//field[@name='bom_id']" position="after">
                    <field name="machine_number" attrs="{'readonly': [('has_moves', '=', True)]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_warehouse_stock_inherit" model="ir.ui.view">
            <field name="name">warehouse.stock.view.req</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="is_raw_location" />
                </xpath>
            </field>
        </record>

        <record id="view_sale_stock_inherit" model="ir.ui.view">
            <field name="name">sale.stock.view.req</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='warehouse_id']" position="attributes">
                    <attribute name="options">{&quot;no_open&quot;: True, &quot;no_create&quot;: True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_sale_order_inherit_sit_alfa" model="ir.ui.view">
            <field name="name">view.order.sale.sit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
			<xpath expr="//field[@name='pricelist_id']" position="attributes">
			<attribute name="readonly">1</attribute>
			</xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('customer','=',True),('res_status','=','approve')]</attribute>
                </xpath>
                <xpath expr="//notebook/page[@name='other_information']/group/group[@name='sales_person']/field[@name='client_order_ref']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                    <attribute name="groups">
                        alfa_customizations.group_can_confirm_so
                    </attribute>
                </xpath>

                <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                    <attribute name="groups">
                        alfa_customizations.group_can_confirm_so
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <!--<field name="warehouse_id" options="{'no_create': True}" groups="stock.group_stock_multi_locations" attrs="{'invisible':[('state','!=','draft')]}"/>-->
                    <field name="client_order_ref" attrs="{'invisible':[('state','!=','draft')]}"/>
                    <field name="order_type" attrs="{'invisible':[('state','!=','draft')]}"/>
                </xpath>
                <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{&quot;no_open&quot;: True, &quot;no_create&quot;: True}</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='analytic_tag_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>
        <record id="view_picking_inherit_sit_alfa" model="ir.ui.view">
            <field name="name">view.picking.stock.int</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('res_status','=','approve')]</attribute>
                </xpath>
                <xpath expr="//button[@name='button_validate'][1]" position="attributes">
                    <attribute name="groups">
                        alfa_customizations.group_validate_transfer_move
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='button_validate'][2]" position="attributes">
                    <attribute name="groups">
                        alfa_customizations.group_validate_transfer_move
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='scheduled_date']" position="replace">
                    <field name="scheduled_date" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))], 'required': [('id', '!=', False)]}"/>
                </xpath>
                <xpath expr="//notebook/page[2]/field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{&quot;no_open&quot;: True, &quot;no_create&quot;: True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_inherit_employee_sit" model="ir.ui.view">
            <field name="name">employee.view.int</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="request_user_id" string="Related User" />
                    <field name="overtime_eligible" string="Overtime Eligible" />
                </xpath>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!--Restrict to create product from purchase order -->
        <record id="view_purchase_order_inherit_sit_one" model="ir.ui.view">
            <field name="name">purchase.view.stock.1</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('supplier','=',True),('res_status','=','approve')]</attribute>
                </xpath>
                <xpath expr="//notebook/page[1]/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{&quot;no_open&quot;: True, &quot;no_create&quot;: True}</attribute>
                </xpath>
            </field>
        </record>

        <!--Restrict to create product from purchase order -->
        <record id="view_invoice_order_inherit_sit_one" model="ir.ui.view">
            <field name="name">account.view.sit.1</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('customer','=',True),('res_status','=','approve')]</attribute>
                </xpath>
                <xpath expr="//notebook/page[1]/field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{&quot;no_open&quot;: True, &quot;no_create&quot;: True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="sale.action_orders" model="ir.actions.act_window">
            <field name="context">{'default_picking_policy': 'one'}</field>
        </record>

        <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
            <field name="context">{'default_picking_policy': 'one','search_default_my_quotation': 1}</field>
        </record>

        <record id="view_employee_inherit_sit_one" model="ir.ui.view">
            <field name="name">employee.inherit.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="employee_english_name" />
                </xpath>
            </field>
        </record>

        <record id="view_vendor_form_sit_one" model="ir.ui.view">
            <field name="name">vendor.invoice.view.1</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('supplier','=',True),('res_status','=','approve')]</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
