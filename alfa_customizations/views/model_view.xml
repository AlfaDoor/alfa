<odoo>
    <data>
        <record id="view_warehouse_stock_inherit" model="ir.ui.view">
            <field name="name">warehouse.stock.view.req</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                     	<field name="is_raw_location" />
                </xpath>
            </field>
        </record>

         <record id="view_sale_stock_inherit" model="ir.ui.view">
            <field name="name">sale.stock.view.req</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='warehouse_id']" position="attributes">
                     	<attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
         <record id="view_sale_order_inherit_sit_alfa" model="ir.ui.view">
            <field name="name">view.order.sale.sit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                     	<field name="warehouse_id" options="{'no_create': True}" groups="stock.group_stock_multi_locations" />
                </xpath>
            </field>
        </record>
		  <record id="view_picking_inherit_sit_alfa" model="ir.ui.view">
            <field name="name">view.picking.stock.int</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='scheduled_date']" position="replace">
                    <field name="scheduled_date" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))], 'required': [('id', '!=', False)]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_inherit_employee_sit" model="ir.ui.view">
            <field name="name">employee.view.int</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="request_user_id" string="Related User" />
                </xpath>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

    
    </data>
</odoo>
