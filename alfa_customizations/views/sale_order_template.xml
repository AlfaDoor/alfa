                    <div class="page">
                        <div class="oe_structure"/>
                        <h2>
                            <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                <span t-if="doc.state not in ['draft','sent']">Order # </span>
                                <span t-if="doc.state in ['draft','sent']">Quotation # </span>
                            </t>
                            <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                <span>Pro-Forma Invoice # </span>
                            </t>
                            <span t-field="doc.name"/>
                        </h2>
                        <br/>
                        <style>
                        .table1{
                        table-layout: fixed;
                        width:540px;
                        height:150px;
                        border:1px solid black;}
                    </style>

                    <div class="clearfix">
                        <div class="row">
                            <div style="position:relative; left:20px" align="center">
                                <table class="table1">
                                    <tr t-if="doc.company_id">
                                        <td ><strong>&#160;&#160;Company Name:</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.company_id.name"/>&#160;&#160;
                                        </td>
                                    </tr>
                                    <tr t-if="doc.company_id">
                                        <td ><strong>&#160;&#160;Address:</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.company_id.street"/>, &#160;<span t-field="doc.company_id.city"/>&#160;&#160;
                                        </td>
                                    </tr>
                                    <tr t-if="doc.company_id">
                                        <td ><strong>&#160;&#160;Phone:</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.company_id.phone"/>&#160;&#160;
                                        </td>
                                    </tr>
                                    <tr t-if="doc.company_id">
                                        <td class="text-left"><strong>&#160;&#160;VAT Number:</strong></td>
                                        <td class="text-right">
                                            <span t-esc="doc.company_id.vat" />&#160;&#160;
                                        </td>
                                    </tr>

                                    <tr t-if="doc.confirmation_date">
                                        <td class="text-left"><strong>&#160;&#160;Confirmation Date:</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.confirmation_date"/>&#160;&#160;
                                        </td>
                                    </tr>

                                      <tr t-if="doc.user_id">
                                        <td class="text-left"><strong>&#160;&#160;Salesperson:</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.user_id.name"/>&#160;&#160;
                                        </td>
                                    </tr>
                                  <!--  <tr t-if="doc.company_id">
                                        <td class="text-left"><strong>&#160;&#160;Payment Term:</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.payment_term_id.name"/>&#160;&#160;
                                        </td>
                                    </tr>
-->
                                </table>
                            </div>

                            <div style = "position:relative; left:120px" align="center">
                                <table class="table1">
                                   
                                    <tr t-if="doc.partner_id">
                                        <td class="text-left"><strong>&#160;&#160;Name:</strong></td>
                                        <td style="font-weight:bold;" class="text-right"><span t-esc="doc.partner_id.name"/>
                                            &#160;&#160;
                                        </td>
                                    </tr>
									 <tr t-if="doc.name">
                                        <td ><strong>&#160;&#160;Customer Reference:</strong></td>
                                        <td style="font-weight:bold;" class="text-right">
                                            <span t-field="doc.client_order_ref"/>&#160;&#160;
                                        </td>
                                    </tr>
                                    <tr t-if="doc.partner_id">
                                        <td class="text-left"><strong>&#160;&#160;Address:</strong></td>
                                        <td style="font-weight:bold;" class="text-right">
                                            <span t-esc="doc.partner_id.street"/>,&#160;<span t-esc="doc.partner_id.city"/>&#160;&#160;
                                        </td>
                                    </tr>
                                    <tr t-if="doc.partner_id">
                                        <td class="text-left"><strong>&#160;&#160;Country:</strong></td>
                                        <td style="font-weight:bold;" class="text-right">
                                            <span t-esc="doc.partner_id.country_id.name"/>&#160;&#160;
                                        </td>
                                    </tr>
                                    <tr t-if="doc.partner_id">
                                        <td class="text-left"><strong>&#160;&#160;Phone:</strong></td>
                                        <td style="font-weight:bold;" class="text-right">
                                            <span t-esc="doc.partner_id.phone" />&#160;&#160;
                                        </td>
                                    </tr>

                                    <tr t-if="doc.partner_id">
                                        <td class="text-left"><strong>&#160;&#160;VAT Number:</strong></td>
                                        <td style="font-weight:bold;" class="text-right">
                                            <span t-esc="doc.partner_id.vat" />&#160;&#160;
                                        </td>
                                    </tr>

                                </table>
                            </div>
                        </div>
                    </div>
                    <br /><br/>

                        <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <!-- TODO: remove in master -->
                                    <t t-set="colspan" t-value="5"/>
                                    <th class="text-left">Description</th>
                                    <th class="text-right">Quantity</th>
                                    <th class="text-right">Unit Price</th>
                                    <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                        <span>Disc.(%)</span>
                                        <!-- TODO: remove in master -->
                                        <t t-set="colspan" t-value="colspan+1"/>
                                    </th>
                                    <th class="text-right">Taxes</th>
                                    <th class="text-right">
                                        <t groups="account.group_show_line_subtotals_tax_excluded">Amount</t>
                                        <t groups="account.group_show_line_subtotals_tax_included">Total Price</t>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">

                                <t t-set="current_subtotal" t-value="0"/>

                                <t t-foreach="doc.order_line" t-as="line">

                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type">
                                            <td style="font-weight:bold;"><span t-field="line.name"/></td>
                                            <td style="font-weight:bold;" class="text-right">
                                                <span t-field="line.product_uom_qty"/>
                                                <span t-field="line.product_uom" groups="uom.group_uom"/>
                                            </td>
                                            <td style="font-weight:bold;" class="text-right">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td style="font-weight:bold;" t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                                <span t-field="line.discount"/>
                                            </td>
                                            <td style="font-weight:bold;" class="text-right">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                            </td>
                                            <td style="font-weight:bold;" class="text-right o_price_total">
                                                <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td style="font-weight:bold;" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td style="font-weight:bold;" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>
                                    </tr>

                                    <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td style="font-weight:bold;" colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span
                                                        t-esc="current_subtotal"
                                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                                />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>

                        <div class="clearfix">
                            <div id="total" class="row" name="total">
                                <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                    <table class="table table-sm">
                                        <tr class="border-black o_subtotal" style="">
                                            <td><strong>Subtotal</strong></td>
                                            <td style="font-weight:bold;" class="text-right">
                                                <span t-field="doc.amount_untaxed"/>
                                            </td>
                                        </tr>
                                        <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                            <tr style="">
                                                <t t-if="amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                                    <td style="font-weight:bold;">
                                                        <span t-esc="amount_by_group[0]"/>
                                                        <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/></span>
                                                    </td>
                                                    <td style="font-weight:bold;" class="text-right o_price_total">
                                                        <span t-esc="amount_by_group[1]"
                                                              t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                    </td>
                                                </t>
                                                <t t-else ="">
                                                    <td style="font-weight:bold;">
                                                        <span t-esc="amount_by_group[0]"/>
                                                    </td>
                                                    <td style="font-weight:bold;" class="text-right o_price_total">
                                                        <span t-esc="amount_by_group[1]"
                                                              t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                        <tr class="border-black o_total">
                                            <td><strong>Total</strong></td>
                                            <td style="font-weight:bold;" class="text-right">
                                                <span t-field="doc.amount_total"/>
                                            </td>
                                        </tr>
										 <tr class="border-black o_total">
                                            <td><strong>Amount Received</strong></td>
                                            <td style="font-weight:bold;" class="text-right">
                                                <span t-field="doc.amount_payed"/>
                                            </td>
                                        </tr>
                                        <tr class="border-black o_total">
                                            <td><strong>Amount Remaining</strong></td>
                                            <td style="font-weight:bold;" class="text-right">
                                                <span t-field="doc.amount_remaining"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <p t-field="doc.note" />
                        <p t-if="doc.payment_term_id.note">
                            <span t-field="doc.payment_term_id.note"/>
                        </p>
                        <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.sudo().note">
                            <strong>Fiscal Position Remark:</strong>
                            <span t-field="doc.fiscal_position_id.sudo().note"/>
                        </p>
                        <br /><br /><br />
                        <table class="table table-condensed">
                            <tbody>
                                <tr>
                                    <td class="text-center" name="1" align="left" valign="baseline">
                                        <br/>
                                        <strong>____________________</strong>
                                        <br/>
                                        <strong>Name:</strong>
                                    </td>

                                    <td class="text-center" name="1" align="center" valign="baseline">
                                        <br/>
                                        <strong>____________________</strong>
                                        <br/>
                                        <strong>Signature:</strong>
                                    </td>

                                    <td class="text-center" name="1" align="right" valign="baseline">
                                        <br/>
                                        <strong>____________________</strong>
                                        <br/>
                                        <strong>Date:</strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>


                    </div>
                </t>
            </xpath>
        </template>
    </data>
</odoo>