<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="rollforward_wizard" model="ir.ui.view">
            <field name="name">roll.over.wizard.form</field>
            <field name="model">roll.over.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm Draft Payslips">
                    <p class="oe_grey">
                        Your total purchase vat is more than your sales vat, do you want to rollforward? or Refund?.
                    </p>
                    <group>
                        <group>
                            <field name="select_action" widget="radio"/>
                        </group>
                        <group>
                            <field name="account_id" attrs="{'invisible':[('select_action','=','refund')]}"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Rollover" attrs="{'invisible':[('select_action','=','refund')]}" name="action_validate" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Refund" attrs="{'invisible':[('select_action','=','rollover')]}" name="action_validate" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
</odoo>