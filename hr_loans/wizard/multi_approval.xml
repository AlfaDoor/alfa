<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Multi Reward Approval Wizard -->

        <record id="multi_reward_form_wizard" model="ir.ui.view">
            <field name="name">multi.reward.form.wizard</field>
            <field name="model">multi.rewards.review.wizard</field>
            <field name="arch" type="xml">
                <form string="Reward(s) Multi Review">
                    <p class="oe_grey">
                        Once draft Reward(s) are reviewed by HR, you will not be able
                        to modify them.
                    </p>
                    <footer>
                        <button name="multi_review" string="Review All" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_reward_review_wizard" model="ir.actions.act_window">
            <field name="name">Multi Reward Review</field>
            <field name="res_model">multi.rewards.review.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <act_window id="action_reward_review_wizard"
            multi="True"
            key2="client_action_multi2"
            name="Review All Rewards"
            res_model="multi.rewards.review.wizard" 
            src_model="hr.employee.rewards"
            view_mode="form" 
            target="new" 
