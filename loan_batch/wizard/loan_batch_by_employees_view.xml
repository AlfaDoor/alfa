<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_hr_loan_batch_by_employees" model="ir.ui.view">
            <field name="name">hr_loan_batches_employees</field>
            <field name="model">loan.batches.employees</field>
            <field name="arch" type="xml">
                <form string="Loan By Employees">
                    <header>
                        <button icon="fa-cogs" string="Generate" name="create_loans" type="object" class="oe_highlight"  />
                    </header>
                    <group>
                        <span colspan="4" nolabel="1">This wizard will generate attendance for all selected employee(s) based on the dates specified</span>
                    </group>
                    <group colspan="4" >
                        <separator string="Employees" colspan="4"/>
                        <newline/>
                        <field name="employee_loan_ids" nolabel="1"/>
                    </group>
               </form>
            </field>
        </record>

        <record id="action_hr_loan_batch_by_employees" model="ir.actions.act_window">
            <field name="name">Generate Loans</field>
            <field name="res_model">loan.batches.employees</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_loan_batch_by_employees"/>
            <field name="target">new</field>
        </record>

</odoo>
