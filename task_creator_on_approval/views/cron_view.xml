<odoo>
	<data>

		<record id="auto_task_subscription_expiry_view_sit" model="ir.cron">
			<field name="name">Task on Subscription Expiry</field>
			<field name="interval_number">15</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field name="doall" eval="False" />
			<field name="model_id" ref="model_sale_subscription"/>
			<field name="code">model.create_subscription_task()</field>
			<field name="state">code</field>
		</record>

		<record id="trial_period_task_contract_view_sit" model="ir.cron">
			<field name="name">Task on Trial Period Expiry(Contract)</field>
			<field name="interval_number">7</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field name="doall" eval="False" />
			<field name="model_id" ref="model_hr_contract"/>
			<field name="code">model.create_trial_period_task()</field>
			<field name="state">code</field>
		</record>

		<record id="task_creation_contract_expiry_sit" model="ir.cron">
			<field name="name">Task on Contract Expiry</field>
			<field name="interval_number">60</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field name="doall" eval="False" />
			<field name="model_id" ref="model_hr_contract"/>
			<field name="code">model.create_contract_task()</field>
			<field name="state">code</field>
		</record>

		<record id="task_creation_hr_rel_view_sit" model="ir.cron">
			<field name="name">Task of HR(Iqama, Passport, Health)</field>
			<field name="interval_number">7</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field name="doall" eval="False" />
			<field name="model_id" ref="model_hr_employee"/>
			<field name="code">model.create_hr_projects_task()</field>
			<field name="state">code</field>
		</record>
		
	</data>
</odoo>
