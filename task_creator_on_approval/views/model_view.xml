<odoo>
    <data>
		 <record id="view_payment_form_sit_one" model="ir.ui.view">
            <field name="name">payment.view.form.sit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
				<xpath expr="//header/field[@name='state']" position="attributes">
				<attribute name="invisible">1</attribute>
				</xpath>
                <xpath expr="//header" position="inside">
                    <button name="proceed_to_submit" string="Submit" class="oe_highlight" type="object" states="draft" />
                    <button name="proceed_to_approve" string="Proceed" class="oe_highlight" type="object" states="submit" groups="task_creator_on_approval.group_payment_responsible,task_creator_on_approval.group_do_approval"/>
                    <button name="action_approve_pay" string="Approve" class="oe_highlight" type="object" states="to_approve" groups="task_creator_on_approval.group_do_approval" />
					<button name="action_set_draft" string="Set to draft" class="oe_highlight" type="object" states="approved" groups="task_creator_on_approval.group_do_approval" />
				<field name="state" widget="statusbar" statusbar_visible="draft,submit,to_approve,approved,posted,reconciled,cancelled"/>
				</xpath>
				 <xpath expr="//group/group" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                 <xpath expr="//group/group" position="before">
                     <group>
                     <field name="payment_type" widget="radio" attrs="{'readonly': [('state', 'not in', ['draft','submit','to_approve'])]}"/>
                         <field name="partner_type" widget="selection" attrs="{'required': [('state', '=', 'draft'), ('payment_type', 'in', ('inbound', 'outbound'))], 'invisible': [('payment_type', 'not in', ('inbound', 'outbound'))], 'readonly': [('state', 'not in', ['draft','submit','to_approve'])]}"/>
                         <field name="partner_id" attrs="{'required': [('state', '=', 'draft'), ('payment_type', 'in', ('inbound', 'outbound'))], 'invisible': [('payment_type', 'not in', ('inbound', 'outbound'))], 'readonly': [('state', 'not in', ['draft','submit','to_approve'])]}" context="{'default_is_company': True, 'default_supplier': payment_type == 'outbound', 'default_customer': payment_type == 'inbound'}"/>
                         <label for="amount"/>
                         <div name="amount_div" class="o_row">
                             <field name="amount" attrs="{'readonly': [('state', 'not in', ['draft','submit','to_approve'])]}"/>
                             <field name="currency_id" options="{'no_create': True, 'no_open': True}" groups="base.group_multi_currency" attrs="{'readonly': [('state', 'not in', ['draft','submit','to_approve'])]}"/>
                         </div>
                         <field name="journal_id" widget="selection" attrs="{'readonly': [('state', 'not in', ['draft','submit','to_approve'])]}"/>
                         <field name="destination_journal_id" widget="selection" attrs="{'required': [('payment_type', '=', 'transfer')], 'invisible': [('payment_type', '!=', 'transfer')], 'readonly': [('state', 'not in', ['draft','submit','to_approve'])]}"/>
                         <field name="hide_payment_method" invisible="1"/>
                         <field name="payment_method_id" string=" " widget="radio" attrs="{'invisible': [('hide_payment_method', '=', True)], 'readonly':[('state', 'not in', ['draft','submit','to_approve'])]}"/>
                         <field name="partner_bank_account_id" attrs="{'invisible': [('show_partner_bank_account', '!=', True)], 'required': [('show_partner_bank_account', '=', True)], 'readonly':[('state', 'not in', ['draft','submit','to_approve'])]}" context="{'default_partner_id': partner_id}"/>
                         <field name="show_partner_bank_account" invisible="1"/>
                         <field name="payment_method_code" invisible="1"/>
                     </group>
                </xpath>
			</field>
		 </record>

        <record id="view_payment_inherited_form_sit_two" model="ir.ui.view">
            <field name="name">view.payment.sit.view</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="custom_payment.view_account_payment_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='employee']" position="after">
                <field name="is_task" invisible="1" />
				<field name="task_id" invisible="1" />
                    <field name="sadad_num" string="Sadad / Cheque No." attrs="{'readonly':[('state','not in',['draft','submit','to_approve'])]}" />
                    <field name="payment_status" widget="radio" string="Payment Status" attrs="{'invisible':['|',('state','not in',['approved','posted','sent','reconciled']),('is_task','=',False)]}"/>
                </xpath>
                <xpath expr="//div[@name='button_box']/button[@name='button_bank_entries']" position="after">
                        <button class="oe_stat_button" name="action_task_view" string="Task" attrs="{'invisible':[('is_task','=',False)]}" type="object" icon="fa-bars"/>
                </xpath>
            </field>
        </record>

         <record id="view_project_form_sit_one" model="ir.ui.view">
            <field name="name">project.task.view.form.sit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_proceed_to_pay" type="object" class="oe_highlight" attrs="{'invisible' : [('is_hr_task', '=', False)]}" string="Proceed for Payment"/>
                    <button name="action_proceed_to_pay_rental" type="object" class="oe_highlight" attrs="{'invisible' : [('is_rental_task', '=', False)]}" string="Approve"/>
                    <button name="action_create_payment" type="object" class="oe_highlight" attrs="{'invisible' : [('go_payment','=',False)]}" string="Create Payment" groups="task_creator_on_approval.group_do_approval,task_creator_on_approval.group_payment_responsible"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="is_payment" invisible="1"/>
                    <field name="is_hr_task" invisible="1"/>
                    <field name="go_payment" invisible="1"/>
                    <field name="is_rental_task" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="amount_payment" string="Amount" />
                </xpath>
                   <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="sadad_no" string="Sadad / Cheque No." />
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_payment_view" type="object" class="oe_stat_button" icon="fa-tasks" attrs="{'invisible' : [('is_payment', '=', False)]}" string="Payment"/>
                </xpath>
				  <xpath expr="//field[@name='partner_id']" position="attributes">
                     <attribute name="string">Partner</attribute>
                </xpath>
            </field>
         </record>
             <record id="view_project_tree_sit_one" model="ir.ui.view">
            <field name="name">project.task.view.tree.sit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='project_id']" position="attributes">
                <attribute name="invisible">1</attribute>
                </xpath>
                 <xpath expr="//field[@name='user_id']" position="after">
                    <field name="amount_payment" string="Amount" />
                     <field name="date_deadline" string="Deadline" />
                </xpath>
                <xpath expr="//field[@name='stage_id']" position="after">
                    <field name="description" string="Description" />
                </xpath>
            </field>
             </record>
  </data>
</odoo>
