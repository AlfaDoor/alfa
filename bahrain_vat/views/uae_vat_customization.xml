    <record model="ir.ui.view" id="view_reverse_charge_tree">
        <field name="name">reverse.charge.tree</field>
        <field name="model">reverse.charge</field>
        <field name="arch" type="xml">
            <tree string="VAT Return Form">
                <field name="name"/>
                <field name="date"/>
                <field name="partner_id" string="Customs Agent"/>
                <field name="amount"/>
                <field name="reverse_charge_amount"/>
                <field name="custom_amount" string="Customs Amount"/>
            </tree>
        </field>
    </record>

        <record model="ir.ui.view" id="view_reverse_charge_form">
            <field name="name">reverse.charge.form</field>
            <field name="model">reverse.charge</field>
            <field name="arch" type="xml">
                <form string="Vat Return">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="tax_compute" type="object" states="draft" string="Compute reverse charge" class="oe_highlight"/>
                    <button name="action_move_create" states="draft" string="Post Journal Entries" type="object" groups="account.group_account_manager" class="oe_highlight o_expense_sheet_post"/>
                    <button name="%(bahrain_vat.reverse_charge_payment_wizard_action)d" states="validate" type="action" string="Register Payment" class="oe_highlight o_expense_sheet_pay" context="{'default_amount': custom_amount_and_reverse}" groups="account.group_account_manager"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" attrs="{'readonly': [['state', 'not in', ['draft']]]}"/>
                            <field name="partner_id" attrs="{'readonly': [['state', 'not in', ['draft']]]}" string="Custom Agent"/>
                            <field name="amount" attrs="{'readonly': [['state', 'not in', ['draft']]]}" readonly="0"/>
                            <field name="port" attrs="{'readonly': [['state', 'not in', ['draft']]]}"/>
                            <field name="ref" attrs="{'readonly': [['state', 'not in', ['draft']]]}"/>
                            <field name="vendor_bill" invisible="1"/>
                            <field name="custom_amount_and_reverse" invisible="1"/>
                        </group>
                        <group>
                            <field name="reverse_charge_tax" attrs="{'readonly': [['state', 'not in', ['draft']]]}"/>
                            <field name="reverse_charge_tax_input" attrs="{'readonly': [['state', 'not in', ['draft']]]}"/>
                            <field name="custom_amount" attrs="{'readonly': [['state', 'not in', ['draft']]]}"/>
                            <field name="custom_account_id" attrs="{'readonly': [['state', 'not in', ['draft']]]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tax Details" >
                            <field name="reverse_charge_line_ids"  nolabel="1" attrs="{'readonly': [['state', 'not in', ['draft']]]}">
                                <tree string="Reverse Charge" editable="bottom">
                                    <field name="name"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Account Details">
                            <group>
                                <group>
                                    <field name="journal_id" attrs="{'readonly': [['state', 'not in', ['draft']]]}"/>
                                    <field name="move_id" readonly="1" string="Tax Journal Entry"/>
                                    <field name="move_id_tax" readonly="1" string=" Payable Entry"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="uae_reverse_charge_action" model="ir.actions.act_window">
            <field name="name">Bill Of Entry</field>
            <field name="res_model">reverse.charge</field>
            <field name="context">{}</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,pivot,graph,form</field>
        </record>

        <menuitem id="menu_reverse_charge" action="uae_reverse_charge_action" parent="account.menu_finance_entries_actions" sequence="32" groups="account.group_account_manager,account.group_account_user"/>

        <record id="vat_return_view_search_analysis" model="ir.ui.view">
            <field name="name">reverse.charge.search</field>
            <field name="model">reverse.charge</field>
            <field name="arch" type="xml">
                <search string="Tickets Search">
                        <field name="vendor_bill"/>
                </search>
            </field>
        </record>

        <record id="uae_reverse_charge_action_2" model="ir.actions.act_window">
            <field name="name">Bill of Entry</field>
            <field name="res_model">reverse.charge</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'search_default_vendor_bill': [active_id],
            }</field>
        </record>

        <record id="invoice_supplier_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                 <xpath expr="/form/header" position="inside">
                        <button name="%(uae_reverse_charge_action_2)d"
                            class="oe_stat_button"
                            icon="fa-book"
                            type="action"
                            attrs="{'invisible': [['import_charge', '=', False]]}"
                            string="Bill of Entry">
                        </button>
                        <!--<button name="%(reverse_charge_wizard_action)d"-->
                            <!--class="oe_stat_button"-->
                            <!--icon="fa-book"-->
                            <!--type="action"-->
                            <!--attrs="{'invisible': ['|', '|',('reverse_charge', '=', False),('import_charge', '=', True),('state', '!=', 'draft')]}"-->
                            <!--context="{'default_amount': amount_total, 'default_vendor_bill': active_id}"-->
                            <!--string="Reverse Charge">-->
                        <!--</button>-->
                     <field name="amount_total" invisible="1"/>
                 </xpath>
                <field name="reference" position="before">
                    <field name="trn"/>
                </field>
                <field name="date_due" position="after">
                    <field name="date_of_issue"/>
                    <field name="date_of_supply"/>
                    <field name="reverse_charge" invisible="1"/>
                    <field name="domestic"/>
                    <field name="import_charge"/>
                    <field name="reverse_charge_entry" invisible="1"/>
                </field>
                <xpath expr="//page[@name='other_info']" position="after">
                    <page name="bill of entry" string="Bill of Entry" attrs="{'invisible': [['import_charge', '=', False]]}">
                        <field name="bill_of_entry" widget="one2many_list" nolabel="1"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>