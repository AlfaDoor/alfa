<?xml version="1.0"?>
<odoo>
    <data>

        <record id="reverse_charge_service_payment_view_form" model="ir.ui.view">
            <field name="name">reverse.charge.service.form</field>
            <field name="model">reverse.charge.service</field>
            <field name="arch" type="xml">
                <form string="Register Payment">
                    <sheet>
                        <field name="id" invisible="1"/>
                        <div class="oe_title">
                            <h1>Reverse Charge</h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" attrs="{'readonly': [['state', 'not in', ['draft']]]}"/>
                                <field name="journal_id" widget="selection" attrs="{'readonly': [['state', 'not in', ['draft']]]}"/>
                                <field name="amount" string="Vendor Bill Amount" attrs="{'readonly': [['state', 'not in', ['draft']]]}"/>
                                <field name="reverse_charge_amount" attrs="{'readonly': [['state', 'not in', ['draft']]]}"/>
                            </group>
                            <group>
                                <field name="state" invisible="1"/>
                                <field name="reverse_charge_tax" attrs="{'readonly': [['state', 'not in', ['draft']]]}"/>
                                <field name="reverse_charge_tax_input" attrs="{'readonly': [['state', 'not in', ['draft']]]}"/>
                                <field name="move_id" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Save' name="save_reverse_charge" attrs="{'invisible': [['state', '=', 'validate']]}" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" attrs="{'invisible': [['state', '=', 'validate']]}"/>
                    </footer>
                </form>
            </field>
        </record>

    <record model="ir.ui.view" id="view_reverse_charge_service_tree">
        <field name="name">reverse.charge.service.tree</field>
        <field name="model">reverse.charge.service</field>
        <field name="arch" type="xml">
            <tree string="VAT Return Form">
                <field name="date"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="amount"/>
                <field name="reverse_charge_amount"/>
            </tree>
        </field>
    </record>
        <!-- Expenses -->
        <record id="reverse_charge_wizard_action" model="ir.actions.act_window">
            <field name="name">Reverse Charge</field>
            <field name="res_model">reverse.charge.service</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="reverse_charge_service_payment_view_form"/>
            <field name="target">new</field>
            <field name="context">{'default_vendor_bill': active_id}</field>
        </record>

        <record forcecreate="True" id="decimal_payroll" model="decimal.precision">
            <field name="name">TaxReturn</field>
            <field name="digits">2</field>
        </record>
        <record id="view_tax_form_inherit" model="ir.ui.view">
            <field name="name">account.tax.form</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="arch" type="xml">
                <field name="price_include" position="after">
                    <field name="reverse_charge"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_uae_vat_kanban">
            <field name="name">uae.vat.return.kanban</field>
            <field name="model">uae.vat.return</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="total_payable"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title"><span><t t-esc="record.name.value"/></span></strong>
                                    </div>
                                    <strong><field name="total_payable" widget="monetary"/></strong>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <span><t t-esc="record.start_date.value"/> to <t t-esc="record.end_date.value"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'rollover': 'danger', 'paid': 'success'}}"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="view_uae_vat_return_tree">
            <field name="name">uae.vat.return.tree</field>
            <field name="model">uae.vat.return</field>
            <field name="arch" type="xml">
                <tree string="VAT Return Form">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="total_taxable_sales_in_period_before_tax"/>
                    <field name="total_collected_on_sales"/>
                    <field name="total_taxable_purchase_in_period_before_tax"/>
                    <field name="total_collected_on_purchase"/>
                    <field name="total_payable" string="Net Amount"/>
                    <field name="adjustment_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_uae_vat_return_form">
            <field name="name">uae.vat.return.form</field>
            <field name="model">uae.vat.return</field>
            <field name="arch" type="xml">
                <form string="Vat Return">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="%(bahrain_vat.vat_return_payment_wizard_action)d" states="validate" type="action" string="Register Payment" class="oe_highlight o_expense_sheet_pay" context="{'default_amount': total_payable}" groups="account.group_account_manager"/>
                        <button name="tax_compute" type="object" states="new" string="Compute Tax" class="oe_highlight"/>
                        <button name="action_validate_new" type="object" states="new" string="Validate" class="oe_highlight"/>
                        <button name="tax_close" type="object" states="validate" string="Close" class="oe_highlight"/>
                        <button string="Export Report" class="oe_highlight" name="export_for_import" type="object" groups="base.group_user"/>
                        <button name="tax_adjustment" states="new" type="object" string="TAX Adjustment" class="oe_highlight o_expense_sheet_pay" context="{'default_amount': total_payable}" groups="account.group_account_manager"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Name"/></h1>
                        </div>
                        <div style="margin-left:786px;color:red">
                            <label for="total_payable" string="Net Amount"/>
                            <field name="total_payable" required="1" class="oe_inline"/>
                        </div>
                        <group>
                            <label for="start_date" string="Period"/>
                            <div>
                                <field name="start_date" required="1" class="oe_inline"/> - <field name="end_date" required="1" class="oe_inline"/>
                            </div>
                            <label for="partner_id"/>
                            <div>
                                <field name="partner_id" required="1" class="oe_inline"/>
                            </div>
                        </group>
                        <group>
                            <group string="Sales">
                                <field name="total_minus" invisible="1"/>
                                <field name="total_taxable_sales_in_period_before_tax" readonly="1"/>
                                <field name="total_collected_on_sales" readonly="1"/>
                                <field name="total_sale_adjustment_amount"/>
                            </group>
                            <group string="Purchase">
                                <field name="total_taxable_purchase_in_period_before_tax" readonly="1"/>
                                <field name="total_collected_on_purchase" readonly="1"/>
                                <field name="total_purchase_adjustment_amount"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Tax Details" >
                                <field name="return_line_ids" nolabel="1" readonly="1">
                                    <tree string="Tax Details">
                                        <field name="name"/>
                                        <field name="scope"/>
                                        <field name="base_amount"/>
                                        <button type="object" name="view_base_regular_lines"
                                                string="View base regular lines" icon="fa-search-plus"/>
                                        <field name="tax_amount"/>
                                        <button type="object" name="view_tax_regular_lines"
                                                string="View Tax regular lines" icon="fa-search-plus"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Reverse Charge" >
                                <field name="reverse_charge_line_ids" nolabel="1" readonly="1">
                                    <tree string="Reverse Charge">
                                        <field name="type"/>
                                        <field name="amount"/>
                                        <field name="custom_amount"/>
                                        <field name="reverse_charge_amount"/>
                                    </tree>
                                </field>
                                <group>
                                    <group>
                                        <button type="object" name="sales_domestic_charge"
                                                string="View Domestic Reverse Charge Invoices" icon="fa-search-plus"/>
                                    </group>
                                    <group>
                                        <button type="object" name="purchases_domestic_charge"
                                                string="View Domestic reverse Charge Bills" icon="fa-search-plus"/>
                                    </group>
                                    <group>
                                        <button type="object" name="open_import_charge"
                                                string="View Import Charge Bills" icon="fa-search-plus"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Account Details">
                                <group>
                                    <group>
                                        <field name="journal_id"/>
                                        <field name="move_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Tax Adjustments" >
                                <field name="tax_adjustment_log_ids" nolabel="1" readonly="1">
                                    <tree string="Adjustments" delete="false">
                                        <field name="tax_id"/>
                                        <field name="reason"/>
                                        <field name="date"/>
                                        <field name="amount"/>
                                        <field name="move_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                </form>
            </field>
        </record>

        <record id="uae_vat_return_action" model="ir.actions.act_window">
            <field name="name">Vat Return</field>
            <field name="res_model">uae.vat.return</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,pivot,graph,form</field>
        </record>

