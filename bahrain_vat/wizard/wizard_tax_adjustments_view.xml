<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tax_adjustment_wizard" model="ir.ui.view">
        <field name="name">tax.adjustment.wizard.form</field>
        <field name="model">tax.adjustment.wizard</field>
        <field name="arch" type="xml">
        <form>
            <h1>
                <field name="reason" class="oe_inline" placeholder="Reason..."/>
            </h1>
            <group>
                <group>
                    <field name="amount"/>
                </group>
                <group>
                    <field name="tax_id"/>
                </group>
                <group string="Accounts">
                    <field name="debit_account_id"/>
                    <field name="credit_account_id"/>
                </group>
                <group string="Options">
                    <field name="journal_id"/>
                    <field name="date"/>
                </group>
            </group>
            <footer>
                <button name="create_move" string="Create and post move" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="btn btn-default" special="cancel" />
            </footer>
        </form>
        </field>
    </record>

    <record id="action_adjustment_wizard" model="ir.actions.act_window">
            <field name="name">TAX Adjustment</field>
            <field name="res_model">tax.adjustment.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="tax_adjustment_wizard"/>
            <field name="target">new</field>
        </record>

</odoo>
