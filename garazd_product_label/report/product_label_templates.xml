<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="label_57x35">
          <style>
                         .table1{
                       table-layout: fixed;
                       width:285px;
                          height:170px;
                          }
          </style>
        <table class="table1">
            <tr height="155px" style="border:0;margin:0;padding:0;">
                <td class="col-xs-4 text-center" style="border:0;margin:0;padding:0;">
                    <div style="text-align:center; font-weight:bold; height:40px !important; padding-top: 10px;padding-top: 5px; width: 252px !important; line-height: 1.0;">
                        <span t-field="label.product_id.name"/>
                    </div>
					  <div t-if="label.product_id.default_code" style="width: 100%; padding: 0; margin: 0; font-size:14px;text-align:center; font-weight:bold;">
                        <span t-field="label.product_id.default_code"/>
                    </div>
                      <div t-if="label.product_id.barcode" class="text-center align-middle" style="margin: 0; padding-top: 10px height: 50px;">
                        <t t-if="label.wizard_id.humanreadable" t-set="show_code" t-value="1"/>
                        <t t-else="" t-set="show_code" t-value="0" />
                        <img alt="Barcode"
                             t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=%s' % ('Code128', label.product_id.barcode, 600,100, show_code)"
                             style="overflow: hidden; width: 100%; height:70%;"/>
                    </div>
                    <div style="text-align:center; font-weight:bold; width: 100%; padding: 0; margin: 0; font-size: 15px;">
                        <span t-field="label.product_id.cost_price_wt"/>
                        <span t-field="label.product_id.currency_id.symbol"/>
                    </div>
                    <div style="text-align:left; font-weight:bold; width: 100%; padding: 0; margin: 0; font-size: 15px;">
                        &#160;<span t-field="label.product_id.old_barcode"/>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;
                        &#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;
                        <span><strong>Cotton Home</strong></span>
                    </div>

                </td>
            </tr>
        </table>
    </template>

    <template id="report_product_label_57x35_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-set="count" t-value="0" />
                <div class="page">
                    <div class="oe_structure"/>
                    <t t-foreach="docs" t-as="label">
                        <t t-set="qty" t-value="1" />
                        <t t-if="label.qty">
                            <t t-set="qty" t-value="label.qty" />
                        </t>
                        <t t-foreach="list(range(qty))" t-as="index_qty">
                            <div t-if="count % 21 == 0" style="page-break-after:always;"/>
                            <div t-if="count % 3 == 0" style="clear:both;"/>
                            <div style="width: 30%; float: left; height: 180px; margin: 0 10px;">
                                <t t-call="garazd_product_label.label_57x35"/>
                            </div>
                            <t t-set="count" t-value="count+1" />
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>

</odoo>
