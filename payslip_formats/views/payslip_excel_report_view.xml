<odoo>
    <data>

       	<record id="view_payslip_bank_report_form" model="ir.ui.view">
		<field name="name">Bank Payslip Report</field>
		<field name="model">payslip.bank.report</field>
		<field name="arch" type="xml">
			<form>
				<header>
					<button name="generate_xls_report" type="object" string="Generate Report"
						class="oe_highlight" />
				</header>

				<sheet>
					<group colspan="4" col="4">
						<field name="date_from" />
						<field name="date_to" />
					</group>
<group>
					<group>
						<!--<field name="sponsor" widget="many2many_tags" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" />-->
						<field name="structure_salary" required='1' widget="many2many_tags" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" />
					</group>
					<group>
					</group>
					</group>

					<group>
						<field name="name_r" colspan="4" invisible="1" />
						<field name="report" filename="name_r" colspan="4" />
					</group>


					<group>
						<button name="generate_report_lines" type="object" string="Generate Report Lines"
							class="oe_highlight" />
					</group>

					
					<group>
						<field name="payslip_report_line_id" nolabel="1">
							<tree create="false">
								<field name="sno" string="S.No"/>
								<field name="employee_no" string="Employee ID" />
								<field name="employee_iqama" string="Employee Resident ID"/>
								<field name="bank_code" string="Bank Code"/>
								<field name="employee_account_no" string="Employee Account No."/>
								<field name="employee_id" stirng="Employee Name" />
								<field name="total_amount" string="Payment Amount"/>
								<field name="basic_sal" string="Basic Salary"/>
								<field name="house_allowance" string="Housing Allowance"/>
								<field name="other_allowance" string="Other Allowance"/>
								<field name="deductions" string="Deductions"/>
								<field name="narration" string="Beneficiary Narration" />

							</tree>
						</field>
					</group>
				</sheet>
			</form>

		</field>
	</record>
<record id="action_payslip_bank_report" model="ir.actions.act_window">
		<field name="name">Bank Payslip Report</field>
		<field name="res_model">payslip.bank.report</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
	   <field name="view_id" ref="view_payslip_bank_report_form" />

	</record>

    <menuitem id="menu_bank_report" name="Bank Report" action="action_payslip_bank_report" parent="hr_customizations.menu_payroll_report_par" sequence="60" groups="hr_payroll.group_hr_payroll_manager"/>
  </data>
</odoo>
